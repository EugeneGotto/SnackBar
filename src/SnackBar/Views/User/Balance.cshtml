@using SnackBar.Resx
@model SnackBar.ViewModels.UserIndexPageViewModel
<div id="userBalance">
    @if (Model == null)
    {
        <h3>@Resource.UserByPin404</h3>
    }
    else
    {
        <h3>@Resource.Hi, @Model.Name, @Resource.YourBalance @Model.Balance BYN</h3>
        <div class="col-md-12">
            <table class="table table-bordered" align="left">
                <thead>
                    <tr>
                        <th>@Resource.ProductName</th>
                        <th>@Resource.Quantity</th>
                        <th>@Resource.TotalPrice</th>
                        <th>@Resource.Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var order in Model.Orders)
                    {
                        <tr>
                            <th>@order.ProductName</th>
                            <th>@order.Count</th>
                            <th>@order.Price  BYN</th>
                            <th>@order.Date</th>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
</div>