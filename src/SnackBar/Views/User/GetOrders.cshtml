@using SnackBar.Resx
@model IEnumerable<SnackBar.ViewModels.OrderListViewModel>
@*@{
        ViewBag.Title = Resource.LastOrders;
        Layout = "~/Views/Shared/_Layout.cshtml";
    }*@
@if (Model.Any())
{
    <div class="col-md-offset-1 col-md-10">
        <h2>@Resource.LastOrders</h2>
        <table class="table table-condensed">
            <thead>
                <tr>
                    <th>@Resource.ProductName</th>
                    <th>@Resource.PricePerOne</th>
                    <th>@Resource.Quantity</th>
                    <th>@Resource.Date</th>
                    <th>@Resource.TotalPrice</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var order in Model)
                {
                    <tr>
                        <td>@order.ProductName</td>
                        <td>@order.Price  BYN</td>
                        <td>@order.Count</td>
                        <td>@order.Date.ToShortDateString()</td>
                        <td>@order.TotalPrice</td>
                    </tr>
                }
            </tbody>
        </table>
        }
    </div>
}
else
{
    <div class="col-md-11"><h3>@Resource.NoOrdersYet</h3></div>

}